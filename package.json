    "uuid": "^8.3.2",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.14",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.9",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
